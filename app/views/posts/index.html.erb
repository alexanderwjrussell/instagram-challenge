<% if Post.all.any? %>
  <% Post.all.each do |post| %>
    <%= image_tag post.image.url(:thumb) %>
    <h2><%= link_to post.description, post_path(post) %></h2>
    <h4><%= link_to "Edit: #{post.description}", edit_post_path(post) %></h4>
  <% end %>
<% else %>
  <h1>No posts yet</h1>
<% end %>

<a href='/posts/new'>Add a post</a>
